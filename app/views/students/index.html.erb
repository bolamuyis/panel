<body class="style">

<h1 class="header">list of students</h1>
<div class="bodwrapper">
<%= link_to "create student", new_student_path %>
<% @students.each do |student| %>
<p>
<span class="">Name: <strong><%= student.firstname %> <%= student.lastname %></strong></span>
<span>| Age: <%= student.age %> </span><br>
<span>Education: <%= student.education %></span><br>
<%= link_to "Show student", student_path(student) %> 
<%= link_to "Edit Student", edit_student_path(student) %> 
<%= link_to "delete", student_path(student), method: :delete %>
<% end %>
</p>
</div>
</body>