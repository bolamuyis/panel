<body class="style">

<h1 class="header">List of Students</h1>
<div class="bodwrapper">
<% if is_admin? %>
    <%=link_to "Create student", new_student_path %>
<% end %>
<% @students.each do |student| %>
<p class="dataInfo">
<span class="courseLabel">Name:</span> <%= student.firstname %> <%= student.lastname %></span>
<span class="courseLabel">| Age:</span> <%= student.age %> <br>
<span class="courseLabel">Education:</span> <%= student.education %></span></p>
<span class="modifylinks"><%= link_to "Show student", student_path(student) %> 
: <%= link_to "Edit Student", edit_student_path(student) %> 
<% if is_admin? %>:<%= link_to "Delete", student_path(student), method: :delete %><% end %></span>
<% end %>

</div>
</body>