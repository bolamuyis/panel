<body class="style">

<h1 class="header">list of courses</h1>
<div class="bodwrapper">
<%= link_to "create course", new_course_path %>
<% @courses.each do |course| %>
<p>
<span class="">Name: <strong><%= course.name %></strong></span><br>
<span>Hours: <%= course.hours %></span><br>
<%= link_to "Show Course", course_path(course) %> 
<%= link_to "Edit Course", edit_course_path(course) %> 
<%= link_to "delete", course_path(course), method: :delete %>
<% end %>
</p>
</div>
</body>